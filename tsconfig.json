{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "dist/main",
    "baseUrl": ".",
    "typeRoots": ["main/types.ts"]
  },
  "include": ["main/*"]
}
